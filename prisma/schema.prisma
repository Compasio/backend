model DonationHistory {
  //CAMPOS DA TABELA
  id_donation Int @id @default(autoincrement())
  voluntary Int
  crowdfunding Int?
  ong Int?
  value Float
  date DateTime @default(now())

  //RELAÇÕES
  id_crowdfunding CrowdFunding? @relation(fields: [crowdfunding], references: [id_crowdfunding])
  id_ong Ong? @relation(fields: [ong], references: [id_ong])
}

model NeededItems {
  id Int @id @default(autoincrement())
  ong Int
  itemName String @db.VarChar(50)
  description String
  itemClass ItemClass
  itemPhoto Bytes
  quantity Int
  
  id_ong Ong @relation(fields: [ong], references: [id_ong])
}


