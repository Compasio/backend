generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//========TABELAS========

model User {
  //CAMPOS DA TABELA
  id_user Int @id @default(autoincrement())
  cpf_user String @unique @db.VarChar(11)
  firstname String @db.VarChar(30)
  lastname String @db.VarChar(50)
  email String @unique @db.VarChar(70)
  password String
  isAdmin Boolean @default(false) //remover isso quando o módulo admin estiver pronto e o login dele também
  profile_picture Bytes?
  description String? @db.VarChar(200)
  birthDate DateTime

  //RELAÇÕES
  habilities Habilities_User[]
  voluntierRelations VoluntierRelations[]
  appData UserAppData[]
}

model UserAppData {
  //CAMPOS DA TABELA
  id_user Int
  //TODO---TERMINAR TABELA USERAPPDATA

  //RELAÇÕES
  user User         @relation(fields: [id_user], references: [id_user])

  @@id([id_user])
}

model Ong {
  //CAMPOS DA TABELA
  id_ong Int @id @default(autoincrement())
  cnpj_ong String @unique @db.VarChar(14)
  cpf_founder String @db.VarChar(11) @unique
  ong_name String @db.VarChar(50)
  email String @unique @db.VarChar(70)
  password String
  profile_picture Bytes?
  description String? @db.VarChar(200)

  //RELAÇÕES
  themes Themes_ONG[]
  voluntierRelations VoluntierRelations[]
  ongAssociates OngAssociated[]
  projects Project[]
}

model VoluntierRelations {
  //CAMPOS DA TABELA
  id_relation Int @id @default(autoincrement())
  user Int
  ong Int
  project Int //TEMOS QUE DECIDIR SE A ASSOCIAÇÃO A UM PROJETO É OBRIGATÓRIA
  dateStart DateTime
  dateEnding DateTime
  description String? @db.VarChar(200)

  //RELAÇÕES
  id_user User @relation(fields: [user], references: [id_user])
  id_ong Ong @relation(fields: [ong], references: [id_ong])
  id_project Project @relation(fields: [project], references: [id_project])
}

model Project {
  //RELAÇÕES
  id_project Int @id @default(autoincrement())
  ong Int
  project_name String @db.VarChar(50)
  //TODO---TERMINAR TABELA PROJECTS

  //RELAÇÕES
  voluntierRelations VoluntierRelations[]
  id_ong Ong @relation(fields: [ong], references: [id_ong])
}

model OngAssociated {
  //RELAÇÕES
  id_associate Int @id @default(autoincrement())
  ong Int
  //TODO---TERMINAR TABELA ONGASSOCIATED

  //RELAÇÕES
  id_ong Ong @relation(fields: [ong], references: [id_ong])
}

